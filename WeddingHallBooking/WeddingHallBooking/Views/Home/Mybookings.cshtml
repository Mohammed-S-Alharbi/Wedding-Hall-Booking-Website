            <p style="text-align:center; color:#999">لا توجد حجوزات حالياً.</p>
        }
        else
        {
            foreach (var booking in Model)
            {
                <div class="booking-card">
                    <h3>@booking.HallName</h3>
                    <p>📅 التاريخ: @booking.EventDate.ToShortDateString()</p>
                    <p>👥 عدد الحضور: @booking.GuestsCount</p>
                    <p>🎁 الخدمات: @booking.Extras</p>
                    <p>💰 التكلفة الإجمالية: @booking.TotalAmount ريال</p>
                </div>
            }
        }
    </div>
</body>
</html>
